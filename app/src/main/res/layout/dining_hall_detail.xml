<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dining_hall_linear_layout"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/diningHallName"
        android:layout_gravity="center"
        android:background="@color/burnt_orange"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="10dp"
        card_view:cardBackgroundColor="@color/burnt_orange"
        card_view:cardCornerRadius="4dp">

        <Spinner
            android:id="@+id/diningHallOptionsSpinner"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="10dp" />

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/operationHours"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:background="@color/burnt_orange"
        android:layout_marginBottom="10dp"
        card_view:cardBackgroundColor="@color/burnt_orange"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:id="@+id/card_head2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/operationHoursTitle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Operation Hours"
                android:textColor="#0F0F0F"
                android:textSize="20sp"
                android:textStyle="bold" />

                <LinearLayout android:id="@+id/card_head4"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/operationHoursText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_centerHorizontal="true"
                        android:layout_marginHorizontal="10dp"
                        android:text="Regular Hours Description Placeholder"
                        android:textColor="@color/white"
                        android:singleLine="true"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/operationHoursSpinner"
                        android:layout_width="171dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/white"
                        android:layout_weight="0"
                        android:textStyle="bold"
                        android:entries="@array/operation_hours_spinner" />

                </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/menuList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        card_view:cardBackgroundColor="@color/light_gray"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:id="@+id/card_head3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/hintText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:gravity="center"
                android:background="@drawable/grey_border"
                android:text="Check the Menu of Your Favorite Food Shop at Owens"
                android:textColor="#0F0F0F"
                android:textSize="20sp">
            </TextView>

            <Spinner
                android:id="@+id/dining_halls_spinner"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginHorizontal="10dp"
                android:gravity="left"
                android:text="Food Items"
                android:textColor="#0F0F0F"
                android:textSize="15sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/idFoodItems"
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>